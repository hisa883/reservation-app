<% provide(:title, 'All Stores') %>
<h1>店舗選択</h1>

<div class="col-md-10 col-md-offset-1">
  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th></th>
        <th>店舗</th>
        <th>電話番号</th>
      </tr>
    </thead>

    <% @stores.each do |store| %>
      <tr>
        <td><%= image_tag store.image, class: 'store-index' %></td>
        <td><%= link_to store.name, store_path(store), class: "btn btn-info" %></td>
        <td><%= store.tel %></td>
      </tr>
    <% end %>
  </table>
</div>