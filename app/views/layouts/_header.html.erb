<header class="navbar navbar-fixed-top navbar-inverse head-back navbar-dark">
      <div class="container">
        <%= link_to "カラオケ予約アプリ", root_url, id: "logo" %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "トップ", root_path %></li>
            <li><%= link_to "予約", stores_path %></li>
            <% if logged_in? %>
              <li><%= link_to "予約中の部屋", reservations_user_path(current_user) %></li>
              <% if current_user.admin? %>
                <li><%= link_to "今日の予約リスト", reservations_list_user_path(current_user)%></li>
                <li><%= link_to "全予約リスト", all_reservation_user_path(current_user)%></li>
                <li><%= link_to "ユーザ一覧", users_path %></li>
              <% end %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  アカウント <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "ユーザー情報", current_user %></li>
                  <li><%= link_to "ユーザー設定", edit_user_path(current_user) %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "ログアウト", logout_path, method: :delete %>
                  </li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "ログイン", login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>